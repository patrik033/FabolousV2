@page
@model FabolousUI.Pages.Park.CreateBusModel


<form method="post">
    <div class="border p-3 mt-4 col-8">
        <input asp-for="@Model.MyBus.Size" type="hidden"/>
        <input type="hidden" asp-for="@Model.MyBus.Id" />
        <input type="hidden" asp-for="@Model.MyBus.Parkingspot"  />
        <input type="hidden" asp-for="@Model.MyBus.StartTime" value="@DateTime.Now" />
        
   
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Bus</h2>
            <hr />
        </div>
        <div class="container col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.MyBus.Registration"></label>
                <input asp-for="@Model.MyBus.Registration" type="text" name="registration" class="form-control" />
                <span asp-validation-for=@Model.MyBus.Registration class="text-danger"></span>
               
            </div>
             @{
                Dictionary<string, string> newSpotDict = new Dictionary<string, string> { { "currentSpots", @Model.IncomingSpots } };
                
            }
            <button type="submit" class="btn btn-primary" asp-all-route-data="newSpotDict" asp-route-id ="@Model.MyBus.Registration" style="width:150px;">Create</button>
            
            
        </div>
    </div>
</form>
<img src="~/img/ValetService.jpg" class="img-fluid col-lg mt-5 col-xl mt-0 " style="width:300px; height:200px;" align="middle"  /><p><cite>Our valet service will handle the parking due to saftey protocol.</cite></p>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
